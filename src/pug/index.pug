doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="theme-color", content="#FFFFFF")
    title Progressive Web App Boilerplate
    link(rel="manifest", href="/manifest.json")
    link(rel="stylesheet", href="/styles.css")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap")

    link(rel="apple-touch-icon", href="/img/apple-touch-icon.png")
  body.app
    #installContainer.hidden.install
      .install-container.container
        img(
          id="btnClose"
          class="icon-small install-close"
          src='/icons/close.svg',
          alt="Close"
        )
        p.install-text Get our free app, it won't take up space on your phone
        button(
          class="install-btn",
          type="button"
        ) Install

    header.header
      .container
        h1 PWA Boilerplate
    main.main
      .container

        - var skillSet = ["html5", "css3", "javascript", "react", "redux"]

        h2 Skill set
        ul.skill-set
          each item in skillSet
            li.skill-item.tech-html
              img(
                class="skill-icon"
                src='/icons/' + item + '.svg',
                alt="#{item}"
              )

        - var projects = ["p1", "p2", "p3", "p4", "p5", "p6"]

        h2 Projects
        div.project-wrapper
          each val in projects
            div.project
              div.project-thumb
                img(
                  class="project-img"
                  src='/img/' + val + '.png'
                  alt="Project #{val}"
                )
              h3.project-name Project #{val}

    footer.footer
      .container.footer-content
        a(
          class="footer-icon-wrapper"
          href="#"
        )
          img(
            class="footer-icon"
            src='/icons/home.svg',
            alt="Home"
          )
        a(
          class="footer-icon-wrapper"
          href="#"
        )
          img(
            class="footer-icon"
            src='/icons/heart.svg',
            alt="Favourite"
          )
        a(
          class="footer-icon-wrapper"
          href="#"
        )
          img(
            class="footer-icon"
            src='/icons/settings.svg',
            alt="Settings"
          )

    script(src='/main.js')